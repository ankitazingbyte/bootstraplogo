          <center><h1><b><%= about.title %></b></h1></center>
            <%= about.text.html_safe %>
            <div class="column">
              <div class="col-sm-6">
                  <%= image_tag about.avatar.url %>
              </div>
              <div class="col-sm-6">
                <div align="left">
                  <%= about.description.html_safe %>
                </div>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</center>
